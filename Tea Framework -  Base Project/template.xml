<?xml version="1.0"?>
<template
    format="1"
    revision="1"
    name="Tea Base Project"
    description="The Base Project of Tea Framework">

    <parameter
        id="baseUrlApi"
        name="Base URL Api"
        constraints="nonempty"
        type="string"
        default="https://www.google.com"/>

    <parameter
    	id="packageName"
    	name="Package name"
    	type="string"
    	constraints="package"
    	default="com.demo.demo"
    	help="Enter package name" />

    <category value="Tea Framework"/>
    <formfactor value="Mobile" />

    <globals file="globals.xml.ftl" />
    <execute file="recipe.xml.ftl" />
                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                
</template>